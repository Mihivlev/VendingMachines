<Page x:Class="Desktop_VendingMachine.Pages.VMModelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop_VendingMachine.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="815" d:DesignWidth="1200"
      Title="VMModelPage" Background="LightGray">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="10*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Background="#1d1d1d" Grid.ColumnSpan="3">
			<TextBlock Text="ООО Торговые автоматы" HorizontalAlignment="Left" Margin="10" FontSize="25" Foreground="WhiteSmoke"/>
			<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
				<TextBlock Text="Администрирование / Торговые автоматы /" FontSize="18" Foreground="Gray" Margin="5"/>
				<TextBlock Text="Новый ТА" Name="TBTitle" FontSize="18" Foreground="Gray" Margin="5"/>
			</StackPanel>
		</Grid>

		<Grid Grid.Row="1" Grid.Column="1" Margin="20" Background="White">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid Background="#efefef" Grid.ColumnSpan="3">
				<Rectangle Fill="#00bbff" Height="1" VerticalAlignment="Top"/>
				<TextBlock Text="Создание торгового автомата" Foreground="#00bbff" FontSize="20" Margin="10" HorizontalAlignment="Left"/>
				<TextBlock x:Name="TBCount" Text="" FontSize="15" Margin="5" HorizontalAlignment="Left"/>
			</Grid>

			<StackPanel Grid.Row="1">
				<TextBlock Text="Название ТА *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="IName" Text="{Binding name}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="1" Grid.Column="1">
				<TextBlock Text="Производитель ТА" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBCompany" FontSize="13" Margin="4" SelectionChanged="CompanySelect">
					<TextBlock Text="Bianchi"/>
					<TextBlock Text="Rheavendors"/>
					<TextBlock Text="Unicum"/>
					<TextBlock Text="Necta"/>
				</ComboBox>
			</StackPanel>

			<StackPanel Grid.Row="1" Grid.Column="2">
				<TextBlock Text="Модель ТА *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBModel" SelectedItem="{Binding ModelsMachine}" FontSize="13" Margin="4" DisplayMemberPath="Model"/>
			</StackPanel>

			<StackPanel Grid.Row="2">
				<TextBlock Text="Режим работы *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBWorkMode" FontSize="13" Margin="4" SelectedItem="{Binding WorkModes}" DisplayMemberPath="mode"/>
			</StackPanel>

			<StackPanel Grid.Row="2" Grid.Column="1">
				<TextBlock Text="Производитель ТА (Slave) *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Text="-" FontSize="13" Margin="4" IsReadOnly="True"/>
			</StackPanel>
			<StackPanel Grid.Row="2" Grid.Column="2">
				<TextBlock Text="Модель ТА (Slave) *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Text="-" FontSize="13" Margin="4" IsReadOnly="True"/>
			</StackPanel>
			
			<StackPanel Grid.Row="3">
				<TextBlock Text="Адресс *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="IAddress" Text="{Binding location}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="3" Grid.Column="1">
				<TextBlock Text="Место *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="IPlace" Text="{Binding place}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="3" Grid.Column="2">
				<TextBlock Text="Координаты" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="ICoordinates" Text="{Binding coordinates}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="4">
				<TextBlock Text="Номер автомата *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="INumber" Text="{Binding serial_number}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="4" Grid.Column="1">
				<TextBlock Text="Время работы (формат: 08:00 - 22:00) *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="IWorkTime" Text="{Binding working_hours}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="4" Grid.Column="2">
				<TextBlock Text="Часовой пояс *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBTimezone" SelectedItem="{Binding Timezones}" DisplayMemberPath="timezone" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="5">
				<TextBlock Text="Товарная матрица *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBMatrix" FontSize="13" Margin="4" IsReadOnly="True"/>
			</StackPanel>

			<StackPanel Grid.Row="5" Grid.Column="1">
				<TextBlock Text="Шаблон крит. значений" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBCrit" SelectedItem="{Binding CriticalThresholdTemplate}" DisplayMemberPath="critical_threshold_template" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="5" Grid.Column="2">
				<TextBlock Text="Шаблон уведомлений" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBUved" SelectedItem="{Binding NotificationTemplates}" DisplayMemberPath="notification_template" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="6">
				<TextBlock Text="Клиент" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBClient" DisplayMemberPath="full_name" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="6" Grid.Column="1">
				<TextBlock Text="Менеджер" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBManager" DisplayMemberPath="full_name" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="6" Grid.Column="2">
				<TextBlock Text="Инженер" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBEngineer" DisplayMemberPath="full_name" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="7">
				<TextBlock Text="Техник-оператор" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBTechnican" DisplayMemberPath="full_name" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2">
				<TextBlock Text="Техник-оператор" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<Border BorderBrush="#1d1d1d" BorderThickness="0.7" CornerRadius="5" Margin="4">
					<StackPanel Orientation="Horizontal">
						<CheckBox Name="Monet" Content="Монетопр." FontSize="13" Margin="12 4 4 4" Checked="Metod_Chenged" Unchecked="Metod_Chenged"/>
						<CheckBox Name="Kopur" Content="Купюропр." FontSize="13" Margin="12 4 4 4" Checked="Metod_Chenged" Unchecked="Metod_Chenged"/>
						<CheckBox Name="Modul" Content="Модуль б/н опл." FontSize="13" Margin="12 4 4 4" Checked="Metod_Chenged" Unchecked="Metod_Chenged"/>
						<CheckBox Name="QR" Content="QR-платежи" FontSize="13" Margin="12 4 4 4" Checked="Metod_Chenged" Unchecked="Metod_Chenged"/>
					</StackPanel>
				</Border>
			</StackPanel>

			<StackPanel Grid.Row="8">
				<TextBlock Text="RFID карты обслуживания" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="IService" FontSize="13" Text="{Binding rfid_service}" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="8" Grid.Column="1">
				<TextBlock Text="RFID карты инкасации" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="ICash" FontSize="13" Text="{Binding rfid_cash_collection}" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="8" Grid.Column="2">
				<TextBlock Text="RFID карты загрузки" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="ILoading" Text="{Binding rfid_loading}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="9">
				<TextBlock Text="KIT Online" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Name="IKit" Text="{Binding kit_online_id}" FontSize="13" Margin="4" Background="Transparent"/>
			</StackPanel>

			<StackPanel Grid.Row="9" Grid.Column="1">
				<TextBlock Text="Приоритет *" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<ComboBox Name="CBPrioritet" SelectedItem="{Binding ServicePriorities}" DisplayMemberPath="service_priority" FontSize="13" Margin="4"/>
			</StackPanel>

			<StackPanel Grid.Row="9" Grid.Column="2">
				<TextBlock Text="Модем" FontSize="13" Margin="4" HorizontalAlignment="Left"/>
				<TextBox Text="-" FontSize="13" Margin="4" IsReadOnly="True"/>
			</StackPanel>

			<Grid Background="#efefef" Grid.Row="10" Grid.ColumnSpan="3">
				<StackPanel Orientation="Horizontal" Margin="8" HorizontalAlignment="Left">
					<Button Margin="3" Padding="4" Width="90" Background="#00bbff" Click="Save">
						<TextBlock Name="TBSave" Text="Создать" FontSize="15" Foreground="White"/>
					</Button>
					<Button Margin="3" Padding="4" Width="90" Background="White" Click="Cancel">
						<TextBlock Text="Отменить" FontSize="15"/>
					</Button>
				</StackPanel>
			</Grid>
		</Grid>
	</Grid>
</Page>

