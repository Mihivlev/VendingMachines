<Page x:Class="Desktop_VendingMachine.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop_VendingMachine.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage"
	  Background="White">
	<Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#1d1d1d">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Авторизация" FontSize="25" Margin="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" Foreground="WhiteSmoke"/>

		<TextBlock Text="email" FontSize="15" Margin="5" Grid.Row="1" Foreground="WhiteSmoke"/>
		<TextBox Name="TBEmail" FontSize="15" Margin="5" Grid.Row="1" Grid.Column="1" Width="250"/>

		<TextBlock Text="пароль" FontSize="15" Margin="5" Grid.Row="2" Foreground="WhiteSmoke"/>
		<PasswordBox Name="TBPassword" FontSize="15" Margin="5" Grid.Row="2" Grid.Column="1" Width="250"/>

		<Button Background="WhiteSmoke" Grid.Row="3" Margin="5" Grid.ColumnSpan="2" Click="Button_Click"
				VerticalAlignment="Center" HorizontalAlignment="Center" Padding="5" Width="100">
			<TextBlock FontSize="15" Foreground="#1d1d1d" Text="Войти"/>
		</Button>
	</Grid>
</Page>
